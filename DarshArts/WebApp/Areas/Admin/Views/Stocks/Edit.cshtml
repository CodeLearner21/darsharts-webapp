@model WebApp.Areas.Admin.ViewModels.Stocks.Pages.EditStockPageViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit Stock</h1>
@if (Model.Products == null)
{
    <p>There is no products added in database, please add product first <a asp-action="New" asp-controller="Products" asp-area="Admin">from here</a></p>
}
else
{
    <div class="row">
        <div class="col-lg-6">
            <form asp-controller="Stocks"
                  asp-action="Save"
                  method="post"
                  class="form-horizontal"
                  role="form">

                <div class="form-group">
                    <label asp-for="StockForm.ProductId">Select Product</label>
                    <select asp-for="StockForm.ProductId"
                            asp-items="@(new SelectList(Model.Products, "Id", "Name"))"
                            class="form-control">
                        <option value="">- Select -</option>
                    </select>
                    <span asp-validation-for="StockForm.ProductId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="StockForm.Quantity">Enter Quantity</label>
                    <input asp-for="StockForm.Quantity"
                           type="text"
                           class="form-control">
                    <span asp-validation-for="StockForm.Quantity" class="text-danger"></span>
                </div>
                <div><label>Created Date: </label>@Model.StockForm.DateCreated</div>
                <div><label>Last update Date: </label>@Model.StockForm.DateUpdated</div>
                <input type="hidden" asp-for="StockForm.Id" />
                <input type="hidden" asp-for="StockForm.DateCreated" />
                <input type="hidden" asp-for="StockForm.DateUpdated" />
                <button type="submit" class="btn btn-primary">Save Stock</button>
            </form>
        </div>
    </div>
}

