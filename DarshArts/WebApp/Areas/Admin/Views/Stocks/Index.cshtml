@model WebApp.Areas.Admin.ViewModels.Stocks.Pages.StockMainPageViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">Stocks</h1>
@if (Model.Stocks != null && Model.Stocks.Any())
{
    var counter = 1;
    <div class="table-responsive">
        <table class="table table-striped product-table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Last Updated</th>
                    <th scope="col">&nbsp;</th>
                    <th scope="col">&nbsp;</th>
                </tr>
            </thead>
            <tbody>                
                @foreach (var stock in Model.Stocks)
                {
                <tr>
                    <td>@counter</td>
                    <td>@stock.Product.Name</td>
                    <td>@stock.Quantity</td>
                    <td>@stock.DateUpdated</td>
                    <td><a asp-area="Admin" asp-controller="Stocks" asp-action="Edit" asp-route-id="@stock.Id"><i class="far fa-edit"></i></a></td>
                    <td class="col-delete">
                        <form id="delete-form" method="post" asp-area="Admin" asp-controller="Stocks" asp-action="Delete">
                            <input type="hidden" name="stockId" value="@stock.Id" />
                            <button class="btn" type="submit" onclick="return confirm('Are you sure you want to delete this stock?')"><i class="far fa-trash-alt"></i></button>
                        </form>
                    </td>
                </tr>
                    counter = counter + 1;
                }
            </tbody>
        </table>
    </div>
}
else
{ 
    <p>Currently we dow not have any stock created, please add new stock from <a asp-area="Admin" asp-controller="Stocks" asp-action="New">here</a></p>
}